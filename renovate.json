{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"local>eliashaeussler/renovate-config",
		"local>eliashaeussler/renovate-config:typo3-extension"
	],
	"packageRules": [
		{
			"enabled": false,
			"matchCurrentVersion": "8.1",
			"matchDatasources": [
				"docker"
			],
			"matchDepNames": [
				"php"
			],
			"matchFileNames": [
				".github/workflows/release.yaml"
			]
		},
		{
			"matchFileNames": [
				"composer.*"
			],
			"constraints": {
				"php": "8.1.*"
			}
		},
		{
			"matchFileNames": [
				"Tests/CGL/composer.*"
			],
			"constraints": {
				"php": "8.3.*"
			}
		}
	]
}
